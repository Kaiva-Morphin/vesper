{
	"tasks": [
		{
			"type": "process",
            "command": "powershell",
			"args": [
				"-Command",
				"npm",
				"run",
				"dev"
			],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
                "cwd": "${workspaceFolder}/frontend"
            },
			"label": "vesper: run frontend"
		},
		{
			"type": "process",
            "command": "powershell",
			"args": [
				"-Command",
				"sea-orm-cli",
				"migrate",
				"-d",
				"./libs/postgre/migrations",
				"-u",
				"postgres://yugabyte@localhost:5433/yugabyte",
				"generate",
				"latest"
			],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
                "cwd": "${workspaceFolder}/"
            },
			"label": "vesper: new migration"
		},
		{
			"type": "process",
            "command": "powershell",
			"args": [
				"-Command",
				"sea-orm-cli",
				"generate",
				"entity",
				"-o",
				"./libs/postgre/entities/src",
				"-u",
				"postgres://yugabyte@localhost:5433/yugabyte",
			],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
                "cwd": "${workspaceFolder}/"
            },
			"label": "vesper: generate entity"
		},
		{
			"type": "cargo",
			"command": "run",
            "args": [
                "-p",
                "auth"
            ],
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
                "cwd": "${workspaceFolder}/"
            },
			"label": "vesper: run auth"
		},
		{
			"type": "cargo",
			"command": "run",
            "args": [
                "-p",
                "email"
            ],
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
                "cwd": "${workspaceFolder}/"
            },
			"label": "vesper: run email"
		},
		{
			"type": "cargo",
			"command": "run",
            "args": [
                "-p",
                "perms"
            ],
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
                "cwd": "${workspaceFolder}/"
            },
			"label": "vesper: run perms"
		},
		{
			"type": "process",
            "command": "powershell",
			"args": [
				"-Command",
				"docker compose up"
			],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
                "cwd": "${workspaceFolder}/"
            },
			"label": "vesper: up docker"
		},
		{
			"type": "process",
            "command": "powershell",
			"args": [
				"-Command",
				"docker compose -f compose.test.yml up"
			],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
                "cwd": "${workspaceFolder}/"
            },
			"label": "vesper: up test docker"
		}
	]
}